<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Horizontal parting line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />
    <!---->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_retweet"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_retweet"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/timeline_icon_retweet" />

            <TextView
                android:id="@+id/tv_retweet"
                style="@style/TextViewBody"
                android:layout_marginLeft="8dp"
                android:text="转发"
                android:textColor="@color/txt_gray" />
        </LinearLayout>
        <!-- Vertical parting line -->
        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="@color/divider_gray" />

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/timeline_icon_comment" />

            <TextView
                android:id="@+id/tv_comment"
                style="@style/TextViewBody"
                android:layout_marginLeft="8dp"
                android:text="评论"
                android:textColor="@color/txt_gray" />
        </LinearLayout>
        <!-- Vertical parting line -->
        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="@color/divider_gray" />

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/timeline_icon_unlike" />

            <TextView
                android:id="@+id/tv_like"
                style="@style/TextViewBody"
                android:layout_marginLeft="8dp"
                android:text="点赞"
                android:textColor="@color/txt_gray" />
        </LinearLayout>
    </LinearLayout>
    <!--Horizontal parting line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

</LinearLayout>