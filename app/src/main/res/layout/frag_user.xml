<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <include layout="@layout/include_logininfo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

    <include layout="@layout/include_userinfo_interaction" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

    <TextView
        android:id="@+id/tv_followlist"
        style="@style/TextViewCaption"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/text_follow" />

    <ListView
        android:id="@+id/lv_follow_list"
        style="@style/ListViewCommon"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"></ListView>

</LinearLayout>