<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@mipmap/surprise_background_default"
    tools:context=".activity.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="20dp"
        android:textColor="@color/txt_gray"
        android:textSize="15sp"
        android:text="\@Author:Mingliang ZHOU"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/txt_gray"
        android:textSize="15sp"
        android:text="                  Wan WANG"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/guide_title"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/welcome_android_logo"
        android:layout_gravity="right|bottom"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center|center_vertical"
        android:background="@mipmap/helper_orange_button_guide"
        android:text="登录微博"/>
</FrameLayout>
