<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!-- Horizontal parting line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>
    <!-- show the bottom menu bar
         @auth BriceChou
         @TODO change the menu bar icon
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_emoticon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_tran2gray_sel">

            <ImageView
                android:id="@+id/iv_emoticon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/timeline_icon_retweet"/>
        </LinearLayout>
        <!-- Vertical parting line -->
        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="@color/divider_gray"/>

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_tran2gray_sel">

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/timeline_icon_comment"/>
        </LinearLayout>
        <!-- Vertical parting line -->
        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="@color/divider_gray"/>
        <LinearLayout
            android:id="@+id/ll_like1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_tran2gray_sel">

            <ImageView
                android:id="@+id/iv_like2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/timeline_icon_unlike"/>
        </LinearLayout>
        <!-- Vertical parting line -->
        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="@color/divider_gray"/>
        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_tran2gray_sel">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/timeline_icon_unlike"/>
        </LinearLayout>
    </LinearLayout>
    <!--Horizontal parting line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>

</LinearLayout>