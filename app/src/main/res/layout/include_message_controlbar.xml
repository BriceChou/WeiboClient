<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Horizontal parting line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />
    <!---->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Vertical parting line -->
        <View
            android:layout_width="1px"
            android:layout_height="18dp"
            android:background="@color/divider_gray" />

        <LinearLayout
            android:id="@+id/ll_message_check"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_message_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/toolbar_icon_discuss" />

            <TextView
                android:id="@+id/tv_message_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:text="查看对话"
                android:textColor="@color/txt_gray" />
        </LinearLayout>


        <!-- Vertical parting line -->
        <View
            android:layout_width="1px"
            android:layout_height="18dp"
            android:background="@color/divider_gray" />

        <LinearLayout
            android:id="@+id/ll_message_reply"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_message_reply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tabbar_message_center" />

            <TextView
                android:id="@+id/tv_message_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="回复"
                android:textSize="14sp"
                android:textColor="@color/txt_gray" />
        </LinearLayout>
    </LinearLayout>
    <!--Horizontal parting line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

</LinearLayout>
